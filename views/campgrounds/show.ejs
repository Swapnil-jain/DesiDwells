<!--Know More page template-->

<% layout('layouts/boilerplate')%>
<!--using ejs-mate to make a partial-->

<div class="row">
    <div class="col-6">
        <div class="card mb-3">
            <img src="<%=campground.image%>" class="card-img-top" alt="Campsite image" />
            <div class="card-body">
                <h5 class="card-title"><%=campground.title%></h5>
                <p class="card-text">
                    <%=campground.description%>
                </p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-secondary"><%=campground.location%></li>
                <li class="list-group-item text-secondary">â‚¹<%=campground.price%>/night</li>
                <li class="list-group-item text-secondary">Submitted By <%=campground.author.username%></li>
            </ul>
            <%if(currentUser && campground.author.equals(currentUser._id)){%>
            <div class="card-body">
                <a href="/campgrounds/<%=campground._id%>/edit"" class="card-link btn btn-warning">Edit</a>
                <form
                    method="post"
                    action="/campgrounds/<%=campground._id%>?_method=DELETE"
                    class="d-inline"
                >
                <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <%}%>
            <div class="card-footer text-body-secondary">
            Posted 2 days ago
            </div>
        </div>
        <a class='btn btn-secondary mb-4' href="/campgrounds">
            All campgrounds
        </a>
    </div>
    <div class="col-6">
        <h2>Leave a Review</h2>
        <form action="/campgrounds/<%=campground._id%>/reviews"
        method="POST" class="needs-validation mb-4" novalidate>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-range" type="range" 
                min=1 max=5 name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea class="form-control" name="review[body]" 
                id="body" cols="30" rows="3" required></textarea>

                <div class="valid-feedback">Looks good!</div> <!--Error handling,copied from bootstrap.-->
            </div>
            <button class="btn btn-success">Submit Review</button>
        </form>

        <% for(let review of campground.reviews) {%>
            <div class="card mb-3">
                <div class="mb-3 card-body">
                    <h5 class="card-title">Rating: <%=review.rating%></h5>
                    <p class="card-text">Review: <%=review.body %> </p>
                    <form
                    method="post"
                    action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
                    class="d-inline"
                    >
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>
</div>
